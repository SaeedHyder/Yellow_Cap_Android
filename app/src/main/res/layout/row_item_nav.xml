<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root_layout"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:src="@drawable/home_yellow"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/img_unselected"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home"

            android:layout_centerVertical="true"/>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/x10">

        <com.ingic.yellowcap.ui.views.AnyTextView
            android:id="@+id/txt_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x10"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10"
            android:text="@string/home"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:typeface="Roboto-Regular.ttf"
            android:layout_toStartOf="@+id/dummyView" />

          <View
              android:id="@+id/dummyView"
              android:layout_width="@dimen/x30"
              android:layout_height="@dimen/x30"
              android:layout_centerVertical="true"
              android:layout_alignParentEnd="true"
              android:foregroundGravity="top"
              android:scaleType="centerInside"
              />
        <ImageView
            android:id="@+id/imgNotificationCount"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:foregroundGravity="top"
            android:scaleType="centerInside"
            android:visibility="visible"/>
      </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/txt_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginBottom="@dimen/x3"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:alpha="0.6"
        android:background="@drawable/text"/>
</LinearLayout>