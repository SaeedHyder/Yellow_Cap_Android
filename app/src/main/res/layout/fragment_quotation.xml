<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginStart="@dimen/x8"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginRight="@dimen/x3"

            android:src="@drawable/app_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:orientation="horizontal">

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_jobNumberHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x3"
                    android:text="@string/job_number"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf"
                    />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_jobNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00664"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_CustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:orientation="horizontal">

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_JobTitleHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x3"
                    android:text="@string/Job_Title"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/x14"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_JobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Electricity Failure"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_paymentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:orientation="horizontal">

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_paymentModeHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x3"
                    android:text="@string/payment_mode"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/x14"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_paymentMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COD,Paypal,Credit Card"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:orientation="horizontal">

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_userAddressHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x3"
                    android:text="@string/User_Address"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/x14"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_userAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DubaiMarina,Near Marina"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:orientation="horizontal">

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_quotationValidHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x3"
                    android:text="@string/quotation_valid_till"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/x14"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_quotationValid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interval Managed by admin"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginEnd="@dimen/x20"
        android:alpha="0.6"
        android:background="@drawable/text" />

    <LinearLayout
        android:id="@+id/ll_EstimatedQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x85"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginBottom="@dimen/x5"
        android:orientation="horizontal">

        <com.app.yellowcap.ui.views.AnyTextView
            android:id="@+id/txt_EstimatedQuoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x3"
            android:text="@string/estimated_quote"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/x14"
            android:textStyle="bold"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.yellowcap.ui.views.AnyTextView
            android:id="@+id/txt_EstimatedQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Between AED 100 to 150"
            android:textColor="@color/gray"
            android:textSize="@dimen/x12"
            app:typeface="Roboto-Regular.ttf" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_weight="0.1"
        android:paddingBottom="@dimen/x5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:layout_marginRight="@dimen/x3"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:text="@string/accept"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/x3"
            android:background="@drawable/button_blackbackground"
            android:text="@string/reject"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>