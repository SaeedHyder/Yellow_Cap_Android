<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/x250"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x15"
        android:layout_weight="0.4"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/ll_ItemsParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_ItemsFirstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:layout_marginBottom="@dimen/x4"
                android:layout_marginRight="@dimen/x2"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="@dimen/x15">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center"
                    android:src="@drawable/technician" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:paddingTop="@dimen/x5"
                    android:text="@string/profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_newJobs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:layout_marginLeft="@dimen/x2"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="@dimen/x15">

                <ImageView
                    android:id="@+id/iv_newJobs"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center"
                    android:src="@drawable/jobs_technician" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:paddingTop="@dimen/x5"
                    android:text="@string/new_jobs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ItemsSecondtRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:layout_marginBottom="@dimen/x4"
                android:layout_marginRight="@dimen/x2"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="@dimen/x15">

                <ImageView
                    android:id="@+id/iv_history"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center"
                    android:src="@drawable/history" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:paddingTop="@dimen/x5"
                    android:text="@string/order_history"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:layout_marginLeft="@dimen/x2"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="@dimen/x15">

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center"

                    android:src="@drawable/notification_technician" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:paddingTop="@dimen/x5"
                    android:text="@string/notifications"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ItemsThirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="@dimen/x15">

                <ImageView
                    android:id="@+id/iv_logout"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center"

                    android:src="@drawable/logout_technician" />

                <com.app.yellowcap.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:text="@string/logout"

                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>