<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.app.yellowcap.ui.views.AnyTextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_horizontal"
            android:text="@string/electrical"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x23"
            android:textStyle="normal"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.yellowcap.ui.views.AnyTextView
            android:id="@+id/notwell_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/x5"
            android:text="@string/ac_not_cooling_well"
            android:textColor="@color/category_list_grey"
            android:textSize="@dimen/x15"
            app:typeface="Roboto-Regular.ttf" />

        <View
            android:id="@+id/txt_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_below="@+id/txtHeader"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.6"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/square_border"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.app.yellowcap.ui.views.AnyEditTextView
                android:id="@+id/txt_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:text="@string/tip_techinecian"
                android:textColor="@color/grey"
                android:textSize="@dimen/x12"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.yellowcap.ui.views.AnyTextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1.3"
                android:alpha="0.8"
                android:gravity="end|center_vertical"
                android:paddingRight="@dimen/x10"
                android:text="@string/aed"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.app.yellowcap.ui.views.AnyTextView
                android:id="@+id/txt_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:text="@string/rate_techinecian"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x12"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.yellowcap.ui.views.CustomRatingBar
                android:id="@+id/rbAddRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1.3"
                android:alpha="0.7"
                android:gravity="center"
                android:textSize="@dimen/x15"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x10"
            android:background="@drawable/rectangle"
            android:orientation="horizontal">

            <com.app.yellowcap.ui.views.AnyTextView
                android:id="@+id/txt_feedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.7"
                android:background="@color/transparent"
                android:hint="@string/write_feedback_here"
                android:maxLength="100"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:scrollbars="vertical"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x15"
                app:typeface="Roboto-Regular.ttf" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x5"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/two_round_button"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/x16" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>