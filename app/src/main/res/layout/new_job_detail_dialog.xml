<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/x15"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/app_icon"
            android:layout_marginBottom="@dimen/x15"
            />


        <com.app.yellowcap.ui.views.AnyTextView
            android:id="@+id/txt_problem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/sink_broken"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:alpha="0.7"
            android:textStyle="bold"
            app:typeface="Roboto-Regular.ttf" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x10"
               >

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/ratename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/requested_by"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:typeface="Roboto-Regular.ttf"
                    android:layout_weight="1"/>

                <com.app.yellowcap.ui.views.AnyTextView
                    android:id="@+id/txt_personname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/muhammad_ali"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />
            </LinearLayout>

            <View
                android:id="@+id/txt_line1"
                android:layout_below="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/line"/>

            <com.app.yellowcap.ui.views.AnyTextView
                android:id="@+id/txt_arrval_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:gravity="center"
                android:text="@string/expected_time_of_arrival"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:alpha="0.7"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:id="@+id/txt_line2"
                android:layout_below="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/line"/>

            <com.app.yellowcap.ui.views.AnyTextView
                android:id="@+id/txt_complete_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:gravity="center"

                android:hint="Expected Time of Job Completion"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:alpha="0.7"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf" />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x5"
        android:layout_alignBottom="@+id/textLayout"
        >

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/two_round_button"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/x10"
            android:textSize="@dimen/x16"
            android:text="Submit"
            />

    </LinearLayout>

</LinearLayout>